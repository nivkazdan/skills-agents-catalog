{
  "_comment": "Template for creating monitoring dashboards in cloud providers.  This template is designed to be flexible and adaptable to various cloud environments.",
  "dashboard_name": "Application Performance Monitoring",
  "description": "Comprehensive monitoring dashboard for application performance and infrastructure health.",
  "provider": "Example Cloud Provider",
  "_comment": "Examples: AWS, GCP, Azure, Datadog, Prometheus",
  "environment": "Staging",
  "_comment": "Examples: Production, Staging, Development",
  "metrics": [
    {
      "name": "CPU Utilization",
      "description": "Percentage of CPU being used by the application.",
      "query": "cloudprovider.cpu.usage",
      "unit": "%",
      "thresholds": {
        "warning": 70,
        "critical": 90
      },
      "visualization": "timeseries",
      "_comment": "Examples: timeseries, gauge, bar chart, table",
      "tags": ["cpu", "performance", "resource"]
    },
    {
      "name": "Memory Usage",
      "description": "Amount of memory being used by the application.",
      "query": "cloudprovider.memory.usage",
      "unit": "GB",
      "thresholds": {
        "warning": 8,
        "critical": 12
      },
      "visualization": "timeseries",
      "tags": ["memory", "performance", "resource"]
    },
    {
      "name": "Request Latency",
      "description": "Time taken to process requests.",
      "query": "cloudprovider.request.latency",
      "unit": "ms",
      "thresholds": {
        "warning": 200,
        "critical": 500
      },
      "visualization": "histogram",
      "tags": ["latency", "performance", "requests"]
    },
    {
      "name": "Error Rate",
      "description": "Percentage of requests resulting in errors.",
      "query": "cloudprovider.error.rate",
      "unit": "%",
      "thresholds": {
        "warning": 1,
        "critical": 5
      },
      "visualization": "timeseries",
      "tags": ["errors", "performance", "requests"]
    },
    {
      "name": "Database Connections",
      "description": "Number of active database connections.",
      "query": "cloudprovider.db.connections",
      "unit": "connections",
      "thresholds": {
        "warning": 50,
        "critical": 100
      },
      "visualization": "gauge",
      "tags": ["database", "connections", "resource"]
    }
  ],
  "alerts": [
    {
      "name": "High CPU Utilization",
      "metric": "CPU Utilization",
      "severity": "Critical",
      "condition": "above",
      "threshold": 90,
      "notification_channel": "slack",
      "_comment": "Examples: email, slack, pagerduty",
      "message": "CPU utilization is above 90% on instance {{instance_id}}."
    },
    {
      "name": "High Memory Usage",
      "metric": "Memory Usage",
      "severity": "Warning",
      "condition": "above",
      "threshold": 8,
      "notification_channel": "email",
      "message": "Memory usage is above 8GB on instance {{instance_id}}."
    }
  ],
  "tags": ["application", "monitoring", "performance", "staging"]
}