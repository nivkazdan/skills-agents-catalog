    "data": {
      "user_id": "user123",
      "username": "johndoe",
      "email": "john.doe@example.com",
      "created_at": "2024-10-27T10:00:00Z"
    }
  },
  "product_added": {
    "_comment": "Event emitted when a new product is added to the catalog",
    "event_type": "product.added",
    "data": {
